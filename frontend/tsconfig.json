{
  "compilerOptions": {
    "outDir": "./dist",  /* Output to the dist folder */
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "noEmit": false
  },
  "include": [
    "src/**/*"  /* Include all source files in src */
  ],
  "exclude": [
    "node_modules", 
    "dist"  /* Exclude the dist folder */
  ]
}
